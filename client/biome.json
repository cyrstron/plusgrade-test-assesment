{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",

  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,
      "a11y": { "useButtonType": "off" }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "quoteStyle": "single"
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
